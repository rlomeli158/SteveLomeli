<div class="text-center">
    <br />
    <h3>We found a customer with that email! Would you like to create an order?</h3>
</div>

<br />

<div class="text-center">
    <a class="btn btn-outline-primary" asp-action="SellTicket">Enter Another Email</a>
    <form asp-action="Create">
        <p class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input name="customer" class="form-control" type="hidden" value=@ViewBag.Customer><br />
            <button type="submit" class="btn btn-outline-warning">Create an Order</button>
        </p>
    </form>
</div>
