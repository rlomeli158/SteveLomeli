@model FinalProjectWorkspace.Models.Price

@{
    ViewData["Title"] = "Delete";
}

    <br />
<h1 class="text-center text-danger">Delete</h1>
<hr style="height:2px;border-width:0;color:#d0faff;background-color:#d0faff">
<br />


<h3 class="text-center">Are you sure you want to delete this?</h3>

<div style="display:inline-flex;">
    <div>
        <h5 class="text-center text-danger">Price Details</h5>
        
        <table class="table-secondary text-dark" style="width:100%; padding:40px; margin-right:250px;">
            <tr>
                <th colspan="2" style="text-align:center">Price Details</th>
            </tr>
            <tr>
                <td>Price Name:</td>
                <td>@Html.DisplayFor(model => model.PriceName)</td>
            </tr>
            <tr>
                <td>Price Amount:</td>
                <td>@Html.DisplayFor(model => model.PriceAmount)</td>
            </tr>
            
        </table>
    </div>
</div>
<br />

<div>
    <form class="text-center" asp-action="Delete">
        <input type="hidden" asp-for="PriceID" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
        <a class="btn btn-outline-primary" asp-action="Index">Back to Price List</a>
    </form>
</div>
